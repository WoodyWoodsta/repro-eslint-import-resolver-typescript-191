{
  "include": ["src/**/*", "@types"],
  "exclude": ["**/__tests__/*", "**/_archive/*"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "types": ["node"],
    "inlineSources": true,
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "paths": {
      "$test": ["./src/test/index.mjs"]
    }
  }
}
